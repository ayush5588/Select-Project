<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>All Projects</title>
        <meta name="description" content="Displaying list of all Projects">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <ul>
            <% for (var i=0; i < projects.length; i++) {%>
                <li> <b><%= projects[i].title %></b> </li>
                <ul>
                    <li> <%= projects[i].description %> </li>
                    <% if(projects[i].status == 0) {%>
                        <li>Added</li>
                        <form action="/project/updateStatus" method="POST"> 
                            <label>Change the status</label>
                            <select name="status" id="status">
                                <option value="start">Start</option>
                                <option value="completed">Completed</option>
                            </select>
                            </br>
                            <label>Re-enter the name of the project</label>
                            <input type="text" name="title">
                            </br>
                            <input type="submit" value="Change">
                        </form>
                        </br>
                    <%}%>
                    <% if(projects[i].status == 1) {%>
                        <li>Started</li>
                        <form action="/project/updateStatus" method="POST"> 
                            <label>Change the status</label>
                            <select name="status" id="status">
                                <option value="start">Restart</option>
                                <option value="completed">Completed</option>
                            </select>
                            </br>
                            <label>Re-enter the name of the project</label>
                            <input type="text" name="title">
                            </br>
                            <input type="submit" value="Change">
                        </form>
                        </br>
                    <%}%>
                    <% if(projects[i].status == 2) {%>
                        <li>Completed</li>
                        <form action="/project/updateStatus" method="POST"> 
                            <label>Change the status</label>
                            <select name="status" id="status">
                                <option value="start">Restart</option>
                            </select>
                            </br>
                            <label>Re-enter the name of the project</label>
                            <input type="text" name="title">
                            </br>
                            <input type="submit" value="Change">
                        </form>
                        </br>
                    <%}%>
                </ul>
                </br>
            <% } %>
        </ul>
        <% if (locals.message) {%>
            <p><b><%=message.info%></b></p>
        <%}%>
    </body>
</html>